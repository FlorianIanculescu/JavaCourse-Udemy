<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="gridPane" alignment="CENTER" hgap="10" stylesheets="@styles.css" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.javafxapplicationcss.HelloController">

    <Button onAction="#handleClick" text="Open..." GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button text="Button Two" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Button id="button_three" text="Button Three" GridPane.columnIndex="2" GridPane.rowIndex="0" />
    <Button fx:id="button4" text="Button Four" GridPane.columnIndex="3" GridPane.rowIndex="0" />
    <Button text="Button Five" GridPane.columnIndex="4" GridPane.rowIndex="0" />

    <RadioButton text="Choice 1" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <Label fx:id="label" onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" rotate="90" text="JavaFX Effects" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Hyperlink onAction="#handleLinkClick" text="www.javafx.com" GridPane.columnIndex="0" GridPane.rowIndex="3" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
    
</GridPane>
